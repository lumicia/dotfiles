{
    // Clangd
    "C_Cpp.intelliSenseEngine": "Disabled",
    "clangd.arguments": [
        "--background-index",
        "--compiler-commands-dir=build",
        "-j=12",
        "--query-driver=/usr/bin/clang++",
        "--clang-tidy",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=memory",
        "--enable-config",
        "--config-file=~/.config/clangd/config.yaml",
    ],
    // CMake
    "cmake.configureOnEdit": false,
    "cmake.configureOnOpen": true,
    "cmake.copyCompileCommands": "",
    // LLDB
    "lldb.commandCompletions": true,
    "lldb.dereferencePointers": true,
    "lldb.evaluateForHovers": true,
    "lldb.launch.expressions": "simple",
    "lldb.showDisassembly": "never",
    "lldb.verboseLogging": true,
    // Code Runner
    "code-runner.runInTerminal": true, // è®¾ç½®æˆfalseä¼šåœ¨â€œè¾“å‡ºâ€ä¸­è¾“å‡ºï¼Œæ— æ³•è¾“å…¥
    "code-runner.saveFileBeforeRun": true, // run codeå‰ä¿å­˜
    "code-runner.preserveFocus": false, // è‹¥ä¸ºfalseï¼Œrun codeåŽå…‰æ ‡ä¼šèšç„¦åˆ°ç»ˆç«¯ä¸Šã€‚å¦‚æžœéœ€è¦é¢‘ç¹è¾“å…¥æ•°æ®å¯è®¾ä¸ºfalse
    "code-runner.clearPreviousOutput": true, // æ¯æ¬¡run codeå‰æ¸…ç©ºå±žäºŽcode runnerçš„ç»ˆç«¯æ¶ˆæ¯ï¼Œé»˜è®¤false
    "code-runner.ignoreSelection": true, // é»˜è®¤ä¸ºfalseï¼Œæ•ˆæžœæ˜¯é¼ æ ‡é€‰ä¸­ä¸€å—ä»£ç åŽå¯ä»¥å•ç‹¬æ‰§è¡Œï¼Œä½†Cæ˜¯ç¼–è¯‘åž‹è¯­è¨€ï¼Œä¸é€‚åˆè¿™æ ·ç”¨
    "code-runner.fileDirectoryAsCwd": true, // å°†code runnerç»ˆç«¯çš„å·¥ä½œç›®å½•åˆ‡æ¢åˆ°æ–‡ä»¶ç›®å½•å†è¿è¡Œï¼Œå¯¹ä¾èµ–cwdçš„ç¨‹åºäº§ç”Ÿå½±å“ï¼›å¦‚æžœä¸ºfalseï¼ŒexecutorMapè¦åŠ cd $dir
    "code-runner.executorMap": {
        "c": "/usr/bin/clang $fileName -o $workspaceRoot/build/debug.out -g -Wall -Wextra -pthread -fuse-ld=lld -fstandalone-debug -fcolor-diagnostics -fparse-all-comments -stdlib=libc++ -std=c11 && $workspaceRoot/build/debug.out",
        "cpp": "/usr/bin/clang++ $fileName -o $workspaceRoot/build/debug.out -g -Wall -Wextra -pthread -fuse-ld=lld -fstandalone-debug -fcolor-diagnostics -fparse-all-comments -stdlib=libc++ -std=c++20 && $workspaceRoot/build/debug.out"
    },
    // Rust
    "rust-analyzer.server.path": "~/.rustup/toolchains/nightly-x86_64-unknown-linux-gnu/bin/rust-analyzer",
    "rust-analyzer.trace.server": "verbose",
    // Python
    "python.languageServer": "Pylance",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--skip-string-normalization",
    ],
    "python.formatting.blackPath": "~/.local/bin/black",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.flake8Args": [
        "extend-ignore = E203"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.diagnosticMode": "workspace",
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    // Haskell
    "[haskell]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "[tex]": {
        "editor.quickSuggestions": {
            "other": "on",
            "comments": "on",
            "strings": "on"
        },
        "editor.wordWrap": "on",
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.latex.tools": [
        {
            // ç¼–è¯‘å·¥å…·å’Œå‘½ä»¤
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "xelatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "xelatex",
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk(xelatex)",
            "tools": [
                "xelatexmk"
            ]
        },
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ],
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "xe->bib->xe->xe",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "pdf->bib->pdf->pdf",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        }
    ],
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.latexindent.path": "/usr/bin/latexindent",
}