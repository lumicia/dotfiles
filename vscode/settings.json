{
    "workbench.colorCustomizations": {
        "terminal.background": "#383737",
        "[Default Dark+]": {
            "editorBracketHighlight.foreground3": "#9CDCFE",
            "editorBracketHighlight.foreground4": "#F3FD00",
            "editorBracketHighlight.foreground5": "#F47D9F",
            "editorBracketHighlight.foreground6": "#A5ADFE"
        }
    },
    "workbench.iconTheme": "vscode-icons",

    // Terminal settings
    "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
    "terminal.integrated.fontSize": 18,

    // Editor settings
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.fontSize": 18,
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono, Microsoft YaHei, Consolas, 'Courier New', monospace",
    "editor.inlineSuggest.enabled": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 70,
    "editor.semanticHighlighting.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "[Monokai]": {
            "rules": {
                "*.abstract": {
                    "fontStyle": "italic",
                },
                "*.readonly": {
                    "fontStyle": "bold",
                },
                "*.static": {
                    "fontStyle": "bold",
                },
                "class": {
                    "fontStyle": "bold",
                    "foreground": "#10a3c2",
                },
                "comment": "#505050",
                "enum": "#daa45a",
                "enumMember": "#daa45a",
                "function": {
                    "foreground": "#8cc269",
                },
                "macro": {
                    "foreground": "#e5b124",
                    "fontStyle": "bold",
                },
                "method": {
                    "foreground": "#8cc269",
                    "fontStyle": "bold underline",
                },
                "namespace": {
                    "foreground": "#00d780",
                    "fontStyle": "bold",
                },
                "parameter": {
                    "foreground": "#ec8aa4",
                },
                "parameter.readonly": {
                    "foreground": "#78d1ff",
                },
                "property": {
                    "fontStyle": "underline",
                    "foreground": "#ef6f48",
                },
                "typeParameter": "#31a567",
                "variable": "#fca106",
                "variable.readonly": {
                    "foreground": "#8f5daf",
                    "fontStyle": "bold",
                },
            }
        },
        "[Solarized Light Alternate]": {
            "rules": {
                "*.abstract": {
                    "fontStyle": "italic",
                },
                "*.readonly": {
                    "fontStyle": "bold",
                },
                "*.static": {
                    "fontStyle": "bold",
                },
                "class": {
                    "fontStyle": "bold",
                    "foreground": "#10a3c2",
                },
                "comment": "#505050",
                "enum": "#daa45a",
                "enumMember": "#daa45a",
                "function": {
                    "foreground": "#2c9678",
                },
                "macro": {
                    "foreground": "#e5b124",
                    "fontStyle": "bold",
                },
                "method": {
                    "foreground": "#2c9678",
                    "fontStyle": "bold underline",
                },
                "namespace": {
                    "foreground": "#00d780",
                    "fontStyle": "bold",
                },
                "parameter": {
                    // "foreground": "#c35691",
                },
                "parameter.readonly": {
                    "foreground": "#78d1ff",
                },
                "property": {
                    "fontStyle": "underline",
                    "foreground": "#ef6f48",
                },
                "typeParameter": "#31a567",
                "variable": "#fca106",
                "variable.readonly": {
                    "foreground": "#8f5daf",
                    "fontStyle": "bold",
                },
            }
        }
    },

    // Vim settings
    "vim.leader": "Space",
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        { // 退出编辑模式
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        },
        // {   // 行末插入分号
        //     "before": ["x", "x"],
        //     "after": ["<Esc>", "$", "a", ";", "<Esc>"]
        // },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { // 全选复制
            "before": [
                "leader",
                "v"
            ],
            "after": [
                "g",
                "g",
                "V",
                "G",
                "y"
            ]
        },
        { // 保存
            "before": [
                "leader",
                "w"
            ],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        { // 复制
            "before": [
                "leader",
                "y"
            ],
            "after": [
                "\"",
                "+",
                "y"
            ]
        },
        { // 粘贴
            "before": [
                "leader",
                "p"
            ],
            "after": [
                "\"",
                "+",
                "p"
            ]
        },
        { // 移动到行首
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        { // 移动到行尾
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        },
        { // 多光标
            "before": [
                "<C-n>"
            ],
            "after": [
                "g",
                "b"
            ]
        },
        { // 删除光标到行首的内容
            "before": [
                "leader",
                "h"
            ],
            "after": [
                "d",
                "^",
                "a"
            ]
        },
        { // 删除光标到行尾的内容
            "before": [
                "leader",
                "l"
            ],
            "after": [
                "d",
                "$",
                "a"
            ]
        },
        { // 替换
            "before": [
                "leader",
                "s"
            ],
            "after": [
                ":",
                "%",
                "s",
                "/",
                "/",
                "g",
                "<Left>",
                "<Left>"
            ]
        }
    ],

    // Remot SSH
    "remote.SSH.useLocalServer": true,

    // Misc settings
    "better-comments.multilineComments": true,
    "winopacity.opacity": 235,
    "git.autofetch": true,
    "markdown.preview.fontSize": 20,
    "leetcode.workspaceFolder": "",
    "workbench.colorTheme": "Solarized Light Alternate",
}